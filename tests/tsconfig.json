{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "rootDir": "..",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2015",
    "types": ["jest"]
  }
}
